<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Buttons">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_preference_test"
            android:title="Check box test"
            android:summary="Common checkbox test" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_test"
            android:title="Switch test"
            android:summary="Common switch button test" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Texts">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_test"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Edit text test" />
        <ListPreference
            android:defaultValue="Entry 1"
            android:entries="@array/list_preference_entries"
            android:entryValues="@array/list_preference_entry_values"
            android:key="list_preference_test"
            android:title="List test" />
        <MultiSelectListPreference
            android:defaultValue="@array/multi_select_list_preference_default_values"
            android:entries="@array/multi_select_list_preferences_entries"
            android:entryValues="@array/multi_select_list_preferences_entries"
            android:key="multi_select_list_preference_test"
            android:title="Multi select list test" />
    </PreferenceCategory>

</PreferenceScreen>
